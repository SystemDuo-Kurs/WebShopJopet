@page "/profile"
@using Models

<AddressList @ref=AddressList AddressSend=AddressRecieve/>
<AddressEditor @ref=AddressEditor AskForRefresh=CallRefresh/>

@code
{
    AddressList AddressList{ get; set; }
    AddressEditor AddressEditor { get; set; }
    private void AddressRecieve(Address address)
        => AddressEditor.GetAddress(address);
    private async void CallRefresh()
        => await AddressList.Refresh();
}
